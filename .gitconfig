[user]
  name = Franck LEBAS
  email = franck.lebas@betao.se
[alias]
  prb = pull --rebase
  lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative
  co = checkout
  ci = commit
  st = status
  br = branch
  brv= branch -v
  add-commit = !git add -A && git commit
[core]
  editor = vim
  autocrlf = false
[difftool "meld"]
  cmd = '' \"$LOCAL\" \"$REMOTE\"
[mergetool "meld"]
  cmd = "'' "
  trustExitCode = true
[cola]
  spellcheck = false
[init]
	defaultBranch = main
